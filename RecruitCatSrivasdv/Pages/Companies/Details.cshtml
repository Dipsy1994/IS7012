@model RecruitCatSrivasdv.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Company Details</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.position)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.minimumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.minimumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.maximumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.maximumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.startDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.startDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.noOfEmployees)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.noOfEmployees)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.revenue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.revenue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.ISIN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.ISIN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.website)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.website)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.keyPeople)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.keyPeople)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.ID)
        </dd>
    </dl>
</div>

@if (Model.Company.Candidates.Any())
{
    <div>
           <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].firstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].lastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].targetSalary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].optStartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].contactNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].relocation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].dateOfBirth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].reference)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].referenceID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].Company)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].JobTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].Industry)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Company.Candidates) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.firstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.lastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.targetSalary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.optStartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.contactNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.relocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.reference)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.referenceID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobTitle.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Industry.ID)
                    </td>
                </tr>
        }
            </tbody>
        </table>
        </div>
}else{
    <div class="alert alert-warning">No candidates exists for this company</div>
}

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
