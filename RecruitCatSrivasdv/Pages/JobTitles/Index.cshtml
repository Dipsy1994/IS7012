@page
@model RecruitCatSrivasdv.Pages.JobTitles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Job Titles</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].minimumSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].maximumSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].optionalStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].jobDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].typeOfEmployee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.JobTitle) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.minimumSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.maximumSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.optionalStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.jobDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.typeOfEmployee)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
